CC = gcc # compiler to be used

SRC := $(wildcard *.c) # all file with the .c extension

OBJ := $(SRC:%c=%o) # substitutes the SRC to produce object files

NAME = school # name of the executable

RM = rm -f

all: ${OBJ}
	gcc $^ -o ${NAME}

%.o: %.c
	gcc -c -o $@ $<

clean:
	$(RM) *~ $(NAME)

oclean:
	${RM} ${OBJ}

fclean: oclean

re: fclean all
